{
    "name": "cowlby/monologgly",
    "description": "Monolog handler for the Loggly API.",
    "type": "library",
    "keywords": ["monolog", "logging", "loggly"],
    "license": "MIT",

    "authors": [
        {
            "name": "Jose Prado",
            "email": "cowlby@me.com"
        }
    ],

    "require": {
        "monolog/monolog": "1.*",
        "cowlby/php-loggly-bindings": "0.*"
    },
    
    "require-dev": {
        "phpunit/phpunit": "3.7.*"
    },

    "autoload": {
        "psr-0": {
            "Cowlby\\Monolog": "src/"
        }
    },
    
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/cowlby/php-loggly-bindings"
        }
    ],
    
    "config": {
        "bin-dir": "bin"
    }
}
